%h1(class="title")
  %span Fitbit

%span(id="data")
  %ul(class="device")
    %li(data-bind="device.version" class="version")
    %li(data-bind="device.last_sync" class="sync")
    %li(data-bind-class="device.battery | prepend 'battery-' | downcase") &nbsp;

  %ul(class="views")
    %li(class="steps")
      %input(class="meter" data-bind-value="steps.meter")
      %span(class="icon")
      %h2(data-bind="steps.today")
      %h3 steps
      %h4(data-bind="steps.goal | append '% of goal'")

    %li(class="steps_total")
      %h2(data-bind="steps.total | shortenedNumber")
      %h3 lifetime steps

    %li(class="calories")
      %input(class="meter" data-bind-value="calories.meter")
      %span(class="icon")
      %h2(data-bind="calories.today")
      %h3 calories
      %h4(data-bind="calories.goal | append '% of goal'")

    %li(class="distance")
      %input(class="meter" data-bind-value="distance.meter")
      %span(class="icon")
      %h2
        %span(data-bind="distance.today")
        %span(data-bind="distance.unit" class="unit")

      %h3 distance
      %h4(data-bind="distance.goal | append '% of goal'")

    %li(class="distance_total")
      %h2
        %span(data-bind="distance.total")
        %span(data-bind="distance.unit" class="unit")

      %h3 lifetime distance

    %li(class="active")
      %input(class="meter" data-bind-value="active.meter")
      %span(class="icon")
      %h2(data-bind="active.today")
      %h3 very active minutes
      %h4(data-bind="active.goal | append '% of goal'")

%span(id="error")
  %h2 Uh Oh.
  %p(data-bind="error")

%p(class="updated-at" data-bind="updatedAtMessage")
